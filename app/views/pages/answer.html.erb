<div class="container text-center">
  <div class="row">
    <h2><strong>You said:</strong> "<%= @question %>"</h2>
  </div>

  <div class="row">
    <h2>
      <strong>
        Your coach says:
      </strong>

      <% if @question == "I am going to work right now!" %>
        <%= "GOOD!" %>
      <% elsif @question.end_with?("?") %>
        <%= "Silly question, get dressed and go to work!" %>
      <% elsif !@question.end_with?("?") %>
        <%= "I don't care, get dressed and go to work!" %>
      <% end %>
    </h2>
  </div>

  <div class="row">
    <%= link_to "ask new question!", "/pages/ask.html", class: "btn btn-danger" %>
  </div>
</div>
